@model HashValidationViewModel
@inject SignInManager<ApplicationUser> SignInManager
<div class="container">
    <br />
    <div style="max-width: 600px; margin: auto;">
        @if (Model.EmailConfirmed)
        {
            <div class="alert alert-success text-center">¡Felicitaciones tu cuenta ya está activada!</div>
        }
        else
        {
            <div class="alert alert-danger text-center">No pudimos activar tu cuenta. Por favor, inicia sesión, e intentalo desde tu perfil.</div>
        }
        @if (!SignInManager.IsSignedIn(User))
        {
            @await Html.PartialAsync("~/Views/Account/Login.cshtml", new LoginViewModel())
        }
    </div>
</div>
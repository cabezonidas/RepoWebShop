@model Discount
@inject ICalendarRepository _calendar
@inject IHostingEnvironment _env
@inject IConfiguration _config

<ePOSPrint>
	<Parameter>
		<devid>local_printer</devid>
		<timeout>10000</timeout>
	</Parameter>
						
	<PrintData>
		<epos-print xmlns="http://www.epson-pos.com/schemas/2011/03/epos-print">
			<text lang="en" />
			<text smooth="true" />
			<text align="center" />
			<text reverse="false" ul="false" em="true" color="color_1" />
			<text font="font_b" />
			@if (!_env.IsProduction())
			{
			<text>
				<feed line="1" />
				<text width="2" height="2" />
				<text>-- PRUEBA --&#10;</text>
			</text>
			}
			<feed line="1" />
			<logo key1="32" key2="32" />
			<feed line="1" />
			<text font="font_a" />
			<text width="1" height="1" />
			<text>www.delasartes.com.ar&#10;</text>
			<feed line="2" />
			<text width="4" height="4" />
			<text>VOUCHER&#10;</text>
			<text width="5" height="5" />
			<text>$@Model.Roof&#10;</text>
			<text width="1" height="1" />
			<feed line="4" />
			@{
				var termsLines = ("*" + Model.Comments).ToCharsPerLine(43);
				foreach(var line in termsLines)
				{
					<text>
						<text>@line&#10;</text>		
					</text>
				}
			}
			<feed line="1" />
			<cut type="feed" />
			<recovery />
		</epos-print>
	</PrintData>
</ePOSPrint>

